{
    "type": "object",
    "properties": {
        "id": {
            "type": "integer",
            "description": "Table identifier",
            "example": 1
        },
        "db_id": {
            "type": "integer",
            "description": "Database identifier",
            "example": 1
        },
        "db_name": {
            "type": "string",
            "description": "Database name",
            "example": "wordpress"
        },
        "name": {
            "type": "string",
            "description": "table name",
            "example": "accounts"
        },
        "type": {
            "type": "string",
            "description": "Table type: clone, append, history",
            "example": "clone"
        },
        "target": {
            "type": "string",
            "description": "Target table name",
            "example": "admin_accounts"
        },
        "partitions": {
            "type": "array",
            "description": "List of current partition names",
            "example": "[\"account_2024-01\", \"accounts_2024_02\"]",
            "items": {
                "type": "string"
            }
        },
        "partitions_regex": {
            "type": "string",
            "description": "Regular expression matching partition names",
            "example": "^accounts_.*"
        },
        "replicated": {
            "type": "boolean",
            "description": "Table is configured for replication",
            "example": true
        },
        "present": {
            "type": "boolean",
            "description": "Table exists in destination database",
            "example": false
        },
        "source_columns": {
            "type": "object",
            "description": "List of source columns",
            "properties": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string",
                        "description": "column name"
                    },
                    "column_type": {
                        "type": "string",
                        "description": "column data type: text, int4, varchar, ..."
                    },
                    "data_type_oid": {
                        "type": "integer",
                        "description": "column data type OID"
                    },
                    "primary_key": {
                        "type": "boolean",
                        "description": "column is part of the primary key"
                    }
                }
            }
        },
        "dest_columns": {
            "type": "object",
            "description": "List of destination columns",
            "properties": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string",
                        "description": "column name"
                    },
                    "column_type": {
                        "type": "string",
                        "description": "column data type: text, int4, varchar, ..."
                    },
                    "data_type_oid": {
                        "type": "integer",
                        "description": "column data type OID"
                    },
                    "primary_key": {
                        "type": "boolean",
                        "description": "column is part of the primary key"
                    }
                }
            }
        }

    },
    "required": [
        "id", "db_id", "name", "type", "target"
    ]
}